# Ollama Configuration
# Copy this file to .env and customize the values

# Ollama model to use (default: gemma3n:e4b)
OLLAMA_MODEL=gemma3:12b

# Ollama server host (default: http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# Optional: Rust log level for debugging
# RUST_LOG=debug

# Research Agent Configuration
# Enable or disable research functionality
ENABLE_RESEARCH=true

# Research mode: always, ask, never
# always = automatically research detected topics
# ask = suggest research to user
# never = disable research suggestions
RESEARCH_MODE=ask